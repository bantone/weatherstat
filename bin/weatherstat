#!/usr/bin/env python3

import argparse
import json
import os
import requests

parser = argparse.ArgumentParser()

# Arguments for zipcope, city, city ID
parser.add_argument("-z", "--zip",   help="zipcode")
parser.add_argument("-c", "--city",  help="city")
parser.add_argument("-id", "--id",   help="city id")
parser.add_argument("-lat",          help="latitude")
parser.add_argument("-lon",          help="longitutde")

APIKEY = os.environ.get('APPID')

args = parser.parse_args()

def main():
    if args.zip:
        response = requests.get('http://api.openweathermap.org/data/2.5/weather',
                                params = { 'zip': args.zip + ',us', 
                                           'APPID': APIKEY 
                                            } )
    elif args.city:
        response = requests.get('http://api.openweathermap.org/data/2.5/weather',
                                params = { 'q': args.city, 
                                           'APPID': APIKEY 
                                            } )
    elif args.id:
        response = requests.get('http://api.openweathermap.org/data/2.5/weather',
                                params = { 'id': args.id, 
                                           'APPID': APIKEY 
                                            } )
    elif args.lat and args.lon:
        response = requests.get('http://api.openweathermap.org/data/2.5/weather',
                                params = { 'lat': args.lat, 
                                           'lon': args.lon, 
                                           'APPID': APIKEY 
                                            } )
    
    print(response.url)
    print(response.json())

if __name__ == "__main__":
    main()
